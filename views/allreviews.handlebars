<div class="container"> 
            <div class="d-flex"> 
            <div class="align-self-center mx-auto">
                <form class="create-form"> 
                    <h3 class="align-self-center">Sign-Up</h3>

                    {{!-- Input User ID - how do we integrate passport here?? --}}
                    {{!-- Do we have a list of reviews by this user appearing on this page?? --}}
                    <div class="form-group row">
                        <label for="inputNewUser" class="col-sm-2 col-form-label">Create User ID:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNewUser" placeholder="User">
                        </div>
                    </div>
                      <div class="form-group row">
                        <label for="inputNewPassword" class="col-sm-2 col-form-label">Create Password:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNewPassword" placeholder="Password">
                        </div>
                    </div>
                          <button type="submit" class="btn btn-primary btn-lg" id="create-user">Create Login:</button>
                </form>
            </div>
            </div> 

        <div class = "row-sm-12">  
            {{!-- List of All City Reviews --}}  
            <div class="col-sm-6" id = "allReviews">
            
                <h3>All Reviews by City:</h3>
                <div class ="row">
                <div class="col">
                    <ul> 
                    {{#each Travel}}
                        {{!-- should we use partial --}}
                        <li>
                        <p>#{{this.id}}    {{this.city_name}}</p>
                        {{#if (city_review != null)}}
                        <p>City Review: {{this.city_review}}</p>
                        {{/if}}
                                {{#if (hotel_name != null)}}
                                <p>Hotel Name: {{this.hotel_name}}</p>
                                <p>Hotel Review: {{this.hotel_review}}</p>
                                {{/if}}
                        </li>  
                    {{/each}}
                    </ul>
                </div>
                </div>
            </div>

            {{!-- Search Reviews --}}  
            <div class="col-sm-6" id = "searchReviews">
            
                <div class ="row">
                <div class="col">

                <form class="create-form"> 
                    <h3 class="align-self-center">Search Reviews</h3>
                    <div class="form-group row">
                        <label for="inputSearchTerm" class="col-sm-2 col-form-label">Enter Search Term:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputSearchTerm" placeholder="Search">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg" id="searchBtn">Submit</button>
                </form>
                </div>
                </div>
            </div>

        </div>

</div> 


